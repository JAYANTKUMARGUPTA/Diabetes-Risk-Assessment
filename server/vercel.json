// {
//     "version": 2,
//     "builds": [{ "src": "index.js", "use": "@vercel/node" }],
//     "routes": [{ "src": "/(.*)", "dest": "index.js" }]
//   }
{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["routes/**", "models/**"] 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "index.js",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/",
      "dest": "index.js"
    }
  ]
}